<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <property name="LOG_PATH" value="logs" />
    <property name="CONSOLE_LOG_PATTERN" value="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%X{TRACE_ID}] [%t] %X{id} %c{1} - %msg%n" />
    <property name="FILE_LOG_PATTERN" value="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%X{TRACE_ID}] [%t] %X{id} %c{1} - %msg%n" />

    <appender name="CONSOLE_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender name="ROLLING_JSON_FILE_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/doctorDashboard-json.log</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/doctorDashboard-json.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>2MB</maxFileSize>
            <maxHistory>3</maxHistory>
            <totalSizeCap>10MB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE_APPENDER" />
        <appender-ref ref="ROLLING_JSON_FILE_APPENDER" />
    </root>

    <springProfile name="dev">
        <logger name="com.dashboard.doctor_dashboard" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE_APPENDER" />
            <appender-ref ref="ROLLING_JSON_FILE_APPENDER" />
        </logger>>
    </springProfile>

    <springProfile name="prod">
        <logger name="com.dashboard.doctor_dashboard" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE_APPENDER" />
            <appender-ref ref="ROLLING_JSON_FILE_APPENDER" />
        </logger>
    </springProfile>

</configuration>